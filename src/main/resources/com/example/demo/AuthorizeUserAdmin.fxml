<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controllers.AuthorizeUserAdminController"
            stylesheets="@styles/dashboard-theme.css">
    <children>
        <!-- Page Title Label with fx:id -->
        <Label fx:id="pageTitle" text="Authorization Requests" layoutX="20" layoutY="20" styleClass="heading" />

        <!-- TableView for displaying authorization requests -->
        <TableView fx:id="requestsTable" layoutX="20" layoutY="60" prefWidth="560" prefHeight="300">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="140" />
                <TableColumn fx:id="roleColumn" text="Role" prefWidth="140" />
                <TableColumn fx:id="requestDateColumn" text="Request Date" prefWidth="140" />
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="140" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
