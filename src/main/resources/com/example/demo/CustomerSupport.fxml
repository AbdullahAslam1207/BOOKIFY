<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controllers.CustomerSupportController"
            stylesheets="@styles/dashboard-theme.css">
    <children>
        <Label text="Customer Support" layoutX="20" layoutY="20" styleClass="heading" />
        <TextArea fx:id="supportMessages" layoutX="20" layoutY="60" prefWidth="560" prefHeight="200"
                  styleClass="text-black" />
        <Button fx:id="sendMessageButton" text="Send Message" onAction="#sendMessage" layoutX="20" layoutY="280" styleClass="view-button" />
    </children>
</AnchorPane>
