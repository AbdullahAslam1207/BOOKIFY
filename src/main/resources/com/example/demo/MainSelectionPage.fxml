<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controllers.MainSelectionController"
            stylesheets="@styles/dashboard-theme.css" prefWidth="800" prefHeight="600">
    <children>
        <!-- Background -->
        <AnchorPane fx:id="background" style="-fx-background-color: black;" prefWidth="800" prefHeight="600">

            <!-- Logo Section -->
            <VBox alignment="CENTER" spacing="20" layoutX="300" layoutY="150">
                <ImageView fx:id="logoImageView" fitHeight="200" fitWidth="300" preserveRatio="true" />
                <HBox alignment="CENTER" spacing="50">
                    <Button fx:id="adminButton" text="ADMIN" onAction="#selectAdmin" styleClass="role-button" />
                    <Button fx:id="ownerButton" text="OWNER" onAction="#selectOwner" styleClass="role-button" />
                    <Button fx:id="customerButton" text="CUSTOMER" onAction="#selectCustomer" styleClass="role-button" />
                </HBox>
            </VBox>
        </AnchorPane>
    </children>
</AnchorPane>
